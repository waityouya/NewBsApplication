<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activitys.UpActivity">
    <include
        layout="@layout/title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View

                android:id="@+id/vf1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray"
                />
            <LinearLayout
                android:gravity="center"
                android:layout_below="@id/vf1"
                android:id="@+id/ll_photo"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.SearchView
                    android:id="@+id/serachview"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/yuan"
                    app:iconifiedByDefault="false">


                </androidx.appcompat.widget.SearchView>
                <ImageView
                    android:id="@+id/iv_nfc"
                    android:src="@drawable/nfc"
                    android:layout_marginEnd="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/iv_query"
                    android:src="@drawable/sys"
                    android:layout_marginEnd="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </LinearLayout>
            <View
                android:id="@+id/vf"
                android:layout_below="@+id/ll_photo"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray"
                />
            <TextView

                android:id="@+id/tag_name"
                android:layout_below="@+id/vf"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_margin="10dp"

                />
            <EditText
                android:id="@+id/et_name"
                android:background="@null"
                android:layout_below="@+id/vf"
                android:layout_toEndOf="@+id/tag_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_margin="10dp"
                />
            <View
                android:id="@+id/v"
                android:layout_below="@+id/tag_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

            <TextView
                android:id="@+id/tag_sex"
                android:layout_below="@+id/v"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:layout_margin="10dp"

                />
            <TextView
                android:id="@+id/tv_sex"
                android:background="@null"
                android:layout_below="@+id/v"
                android:layout_toStartOf="@id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/sex_n"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_below="@+id/v"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:scaleType="fitEnd"
                android:src="@mipmap/right"
                />
            <View
                android:id="@+id/v1"
                android:layout_below="@+id/tag_sex"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />
            <TextView
                android:id="@+id/tag_nationality"
                android:layout_below="@+id/v1"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nationality"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/tv_nationality"
                android:background="@null"
                android:layout_below="@+id/v1"
                android:layout_toStartOf="@id/iv_nationality_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/default_nationality"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/iv_nationality_right"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_below="@+id/v1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:scaleType="fitEnd"
                android:src="@mipmap/right"
                />
            <View
                android:id="@+id/v2"
                android:layout_below="@+id/tag_nationality"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/gray"
                />

            <TextView
                android:id="@+id/tag_document_type"
                android:layout_below="@+id/v2"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/document_type"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/tv_document_type"
                android:background="@null"
                android:layout_below="@+id/v2"
                android:layout_toStartOf="@id/iv_document_type_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/default_document_type"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/iv_document_type_right"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_below="@+id/v2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:scaleType="fitEnd"
                android:src="@mipmap/right"
                />
            <View
                android:id="@+id/v3"
                android:layout_below="@+id/tag_document_type"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />
            <TextView
                android:id="@+id/tag_id_number"
                android:layout_below="@+id/v3"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_number"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/et_id_number"
                android:background="@null"
                android:layout_below="@+id/v3"
                android:layout_toEndOf="@+id/tag_document_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_margin="10dp"
                />
            <View
                android:id="@+id/v4"
                android:layout_below="@+id/tag_id_number"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />



            <TextView
                android:id="@+id/tag_native_place"
                android:layout_below="@+id/v4"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/native_place"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/tv_native_place"
                android:background="@null"
                android:layout_below="@+id/v4"
                android:layout_toStartOf="@id/iv_native_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/default_native_place"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/iv_native_place"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_below="@+id/v4"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:scaleType="fitEnd"
                android:src="@mipmap/right"
                />
            <View
                android:id="@+id/v5"
                android:layout_below="@+id/tag_native_place"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

            <TextView
                android:id="@+id/tag_validity"
                android:layout_below="@+id/v5"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/validity"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/tv_validity"
                android:background="@null"
                android:layout_below="@+id/v5"
                android:layout_toStartOf="@id/iv_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/time"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/iv_validity"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_below="@+id/v5"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:scaleType="fitEnd"
                android:src="@mipmap/right"
                />
            <View
                android:id="@+id/v6"
                android:layout_below="@+id/tag_native_place"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />
            <View
                android:id="@+id/v7"
                android:layout_below="@+id/tag_validity"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/gray"
                />

            <TextView
                android:id="@+id/tag_illegal_time"
                android:layout_below="@+id/v7"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/illegal_time"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/tv_illegal_time"
                android:background="@null"
                android:layout_below="@+id/v7"
                android:layout_toStartOf="@id/iv_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/illegal_time"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

            <View
                android:id="@+id/v8"
                android:layout_below="@+id/tag_illegal_time"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

            <TextView
                android:id="@+id/tag_illegal_place"
                android:layout_below="@+id/v8"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/illegal_place"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/et_illegal_palce"
                android:background="@null"
                android:layout_below="@+id/v8"
                android:layout_toEndOf="@+id/tag_illegal_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_margin="10dp"
                />
            <View
                android:id="@+id/v9"
                android:layout_below="@+id/tag_illegal_place"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />
            <TextView
                android:id="@+id/tag_illegal_behavior"
                android:layout_below="@+id/v9"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/illegal_behavior"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/tv_illegal_behavior"
                android:background="@null"
                android:layout_below="@+id/v9"
                android:layout_toStartOf="@id/iv_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/illegal_behavior"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />
            <ImageView

                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_below="@+id/v9"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:scaleType="fitEnd"
                android:src="@mipmap/right"
                />
            <View
                android:id="@+id/v10"
                android:layout_below="@+id/tag_illegal_behavior"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />
            <TextView
                android:id="@+id/tag_punishment_type"
                android:layout_below="@+id/v10"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/punishment_type"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/tv_punishment_type"
                android:background="@null"
                android:layout_below="@+id/v10"
                android:layout_toStartOf="@id/iv_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/punishment_type"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />
            <ImageView

                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_below="@+id/v10"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:scaleType="fitEnd"
                android:src="@mipmap/right"
                />
            <View
                android:id="@+id/v11"
                android:layout_below="@+id/tag_punishment_type"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

            <TextView
                android:id="@+id/tag_punishment_money"
                android:layout_below="@+id/v11"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/punishment_money"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/et_punishment_money"
                android:background="@null"
                android:layout_below="@+id/v11"
                android:layout_toEndOf="@+id/tag_punishment_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_margin="10dp"
                />

            <View
                android:id="@+id/v12"
                android:layout_below="@+id/tag_punishment_money"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/gray"
                />

            <TextView
                android:id="@+id/tag_car_number"
                android:layout_below="@+id/v12"
                android:theme="@style/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_number"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/et_car_number"
                android:background="@null"
                android:layout_below="@+id/v12"
                android:layout_toEndOf="@+id/tag_car_number"
                android:layout_toStartOf="@+id/iv_car_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"

                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/iv_car_number"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_below="@+id/v12"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:scaleType="fitEnd"
                android:src="@mipmap/car_number_s"
                />

            <View
                android:id="@+id/v13"
                android:layout_below="@+id/tag_car_number"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/gray"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rl_up"
                android:layout_below="@+id/v13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


            <Button
                android:background="@drawable/btn_bg_mr"

                android:id="@+id/add"

                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_up"
                android:text="@string/add"/>
            <android.inputmethodservice.KeyboardView
                android:id="@+id/keyboard_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_car_number"
                android:background="#DCDCDC"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:keyBackground="@drawable/selector_key"
                android:keyTextColor="#000"
                android:keyTextSize="18sp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:shadowColor="#FFFFFF"
                android:shadowRadius="0.0"
                android:visibility="gone"/>

        </RelativeLayout>

    </ScrollView>


</LinearLayout>